Sub CreateHRStrategyPresentation()
    Dim pptApp As PowerPoint.Application
    Dim pptPres As PowerPoint.Presentation
    Dim pptSlide As PowerPoint.Slide
    Dim i As Integer
    
    'Create new PowerPoint instance
    Set pptApp = New PowerPoint.Application
    pptApp.Visible = True
    Set pptPres = pptApp.Presentations.Add
    
    'Slide 1: Title Slide
    Set pptSlide = pptPres.Slides.Add(1, ppLayoutTitle)
    pptSlide.Shapes.Title.TextFrame.TextRange.Text = "2025 HR Strategy Toolkit"
    pptSlide.Shapes(2).TextFrame.TextRange.Text = "Top Systems, Conferences & Platforms for Business Success" & vbNewLine & "Created: " & Date
    
    'Slide 2: Introduction
    Set pptSlide = pptPres.Slides.Add(2, ppLayoutText)
    pptSlide.Shapes.Title.TextFrame.TextRange.Text = "Key Components for 2025 Success"
    With pptSlide.Shapes(2).TextFrame.TextRange
        .Text = "Critical elements for modern organizations:"
        .InsertAfter vbNewLine & "• AI-driven HR systems" & vbNewLine & "• Strategic conference participation" & _
                    vbNewLine & "• Integrated business platforms" & vbNewLine & "• Automated workflows"
        .Font.Size = 24
    End With

    'Slide 3: Top HR Systems
    Set pptSlide = pptPres.Slides.Add(3, ppLayoutText)
    pptSlide.Shapes.Title.TextFrame.TextRange.Text = "Top HR Systems for 2025"
    With pptSlide.Shapes(2).TextFrame.TextRange
        .Text = "Market leaders in HR technology:"
        .InsertAfter vbNewLine & "• HiBob - People analytics & engagement" & _
                    vbNewLine & "• BambooHR - SME-focused cloud platform" & _
                    vbNewLine & "• Rippling - Global HR/IT/finance integration" & _
                    vbNewLine & "• Workday - Enterprise-scale HCM solutions"
        .Font.Size = 24
    End With

    'Slide 4: Key Conferences
    Set pptSlide = pptPres.Slides.Add(4, ppLayoutText)
    pptSlide.Shapes.Title.TextFrame.TextRange.Text = "Must-Attend 2025 Events"
    With pptSlide.Shapes(2).TextFrame.TextRange
        .Text = "Strategic learning & networking:"
        .InsertAfter vbNewLine & "• HR Vision London (Mar 5-6)" & _
                    vbNewLine & "• Unleash America (May 6-8)" & _
                    vbNewLine & "• SHRM Talent Conf (Mar 24-26)" & _
                    vbNewLine & "• Microsoft 365 Conf (May 6-8)"
        .Font.Size = 24
    End With

    'Slide 5: Business Platforms
    Set pptSlide = pptPres.Slides.Add(5, ppLayoutText)
    pptSlide.Shapes.Title.TextFrame.TextRange.Text = "Essential Business Platforms"
    With pptSlide.Shapes(2).TextFrame.TextRange
        .Text = "Digital transformation tools:"
        .InsertAfter vbNewLine & "• Salesforce Commerce Cloud" & _
                    vbNewLine & "• Shopify Plus (AI analytics)" & _
                    vbNewLine & "• Microsoft Dynamics 365" & _
                    vbNewLine & "• Zoho Workplace Suite"
        .Font.Size = 24
    End With

    'Slide 6: Implementation Roadmap
    Set pptSlide = pptPres.Slides.Add(6, ppLayoutText)
    pptSlide.Shapes.Title.TextFrame.TextRange.Text = "Implementation Strategy"
    With pptSlide.Shapes(2).TextFrame.TextRange
        .Text = "6-month adoption plan:"
        .InsertAfter vbNewLine & "1. Needs assessment (Weeks 1-2)" & _
                    vbNewLine & "2. Vendor evaluations (Weeks 3-4)" & _
                    vbNewLine & "3. Pilot program setup (Month 2)" & _
                    vbNewLine & "4. Full deployment (Months 3-5)" & _
                    vbNewLine & "5. Continuous optimization (Month 6+)"
        .Font.Size = 24
    End With

    'Format all slides
    For Each pptSlide In pptPres.Slides
        With pptSlide.Design
            .PresetDesign = msoPatternDarkVertical
            .SlideColorScheme(2).RGB = RGB(0, 112, 192) 'Blue theme
        End With
        pptSlide.Shapes.Title.TextFrame.TextRange.Font.Size = 36
    Next pptSlide

    'Cleanup
    Set pptSlide = Nothing
    Set pptPres = Nothing
    Set pptApp = Nothing
    
    MsgBox "Presentation created successfully!", vbInformation
End Sub
